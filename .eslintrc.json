{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["#app", "./src"],
          ["#components", "./src/components"],
          ["#lib", "./src/lib"],
          ["#config", "./src/config"],
          ["#store", "./src/store"]
        ],
        "extensions": [".js"]
      }
    }
  }
}
